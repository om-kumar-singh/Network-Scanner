<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="4dp"
    android:layout_marginVertical="6dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="3dp"
    app:strokeWidth="0dp"
    app:cardBackgroundColor="@color/surface"
    app:rippleColor="@color/accent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp">

        <!-- Device Icon -->
        <ImageView
            android:id="@+id/ivDeviceIcon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_device"
            android:contentDescription="Device"
            app:tint="@color/accent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- IP Address -->
        <TextView
            android:id="@+id/tvIpAddress"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="8dp"
            android:text="192.168.1.1"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/on_surface"
            android:maxLines="1"
            android:ellipsize="end"
            android:lineSpacingExtra="2dp"
            app:layout_constraintEnd_toStartOf="@+id/statusIndicator"
            app:layout_constraintStart_toEndOf="@+id/ivDeviceIcon"
            app:layout_constraintTop_toTopOf="@+id/ivDeviceIcon" />

        <!-- Status Indicator -->
        <View
            android:id="@+id/statusIndicator"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:background="@drawable/status_indicator"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tvIpAddress" />

        <!-- Hostname -->
        <TextView
            android:id="@+id/tvHostname"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:text="Hostname"
            android:textSize="14sp"
            android:textColor="@color/neutral_text"
            android:maxLines="1"
            android:ellipsize="end"
            android:lineSpacingExtra="4dp"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/tvIpAddress"
            app:layout_constraintTop_toBottomOf="@+id/tvIpAddress" />

        <!-- Ports Section -->
        <LinearLayout
            android:id="@+id/portsContainer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvHostname">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_port"
                android:contentDescription="Ports"
                app:tint="@color/accent" />

            <TextView
                android:id="@+id/tvOpenPorts"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_weight="1"
                android:text="Open Ports: None"
                android:textSize="14sp"
                android:textColor="@color/on_surface"
                android:maxLines="2"
                android:ellipsize="end"
                android:lineSpacingExtra="4dp" />
        </LinearLayout>

        <!-- No Ports Message -->
        <TextView
            android:id="@+id/tvNoPorts"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="No open ports detected"
            android:textSize="14sp"
            android:textColor="@color/neutral_text"
            android:textStyle="italic"
            android:visibility="gone"
            android:lineSpacingExtra="4dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvHostname" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>
